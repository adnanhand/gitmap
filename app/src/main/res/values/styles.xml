<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="style_repo_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:text">0</item>
        <item name="drawableTint">@color/tint</item>
        <item name="drawableTintMode">src_in</item>
    </style>

    <style name="style_repo_stats_min">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">0</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="drawableTint">@color/tint</item>
        <item name="drawableTintMode">src_in</item>
    </style>

    <style name="style_repo_menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/box_circle_foreground</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="style_simple_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="drawableTint">@color/tint</item>
        <item name="alpha">0.8</item>
    </style>

    <style name="style_link_git">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/box_circle_mid</item>
        <item name="android:padding">5dp</item>
        <item name="android:tintMode">src_in</item>
        <item name="tint">@color/blue</item>
        <item name="srcCompat">@drawable/github_icon</item>
    </style>

    <style name="style_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:paddingTop">33dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:background">@drawable/box_rounded_foreground</item>
    </style>

    <style name="style_auth_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/box_circle_foreground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="style_auth_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">180dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_auth_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:tintMode">src_in</item>
        <item name="srcCompat">@drawable/github_icon</item>
        <item name="tint">@color/tint</item>
    </style>

</resources>